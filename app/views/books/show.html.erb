<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author.full_name %>
</p>

<% if @book.print_citation.present? %>
<p>
  <strong>Citation:</strong>
  <%= sanitize @book.print_citation %>
</p>
<%end%>

<% if @book.online_citation.present? %>
<p>
  <strong>Citation:</strong>
  <%= sanitize @book.online_citation %>
</p>
<%end%>

<% if @book.database_citation.present? %>
<p>
  <strong>Citation:</strong>
  <%= sanitize @book.database_citation %>
</p>
<%end%>

<%= link_to 'Edit', edit_book_path(@book) %> |
